{
  "name": "ace-cortex-api",
  "version": "0.0.1",
  "description": "Ace Cortex API is a Nodejs/Express REST API with TypeScript, PostgreSQL, Prisma and ESLint applying concepts from Clean Architecture by Robert C. Martin.",
  "main": "src/main/server.js",
  "author": "Jeziel Lopes",
  "keywords": [
    "nodejs",
    "express",
    "typescript",
    "postgresql",
    "prisma",
    "babel",
    "eslint",
    "jest",
    "clean",
    "architecture"
  ],
  "scripts": {
    "build": "rm -rf dist && babel src --extensions \".js,.ts\" --out-dir dist --copy-files --no-copy-ignored",
    "start": "yarn build && node ./dist/main/server.js",
    "start:local": "yarn build && yarn start",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only --ignore-watch --no-notify src/main/server.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "yarn lint --fix",
    "env:copy": "cp .sample.env .env",
    "test": "jest",
    "test:cov": "yarn test --coverage --watchAll",
    "test:watch": "yarn test --watchAll",
    "prisma:generate": "yarn prisma generate",
    "prisma:migrate:reset": "yarn prisma migrate reset",
    "prisma:seed": "ts-node-dev prisma/seed.ts"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.18.2",
    "@babel/node": "^7.17.10",
    "@babel/preset-env": "^7.18.2",
    "@babel/preset-typescript": "^7.17.12",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.1",
    "@types/node": "^17.0.36",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^8.16.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "jest": "^28.1.1",
    "prisma": "^4.1.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.2"
  },
  "dependencies": {
    "@prisma/client": "^4.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1"
  }
}
